    <Grid RowDefinitions="*, Auto">
        
        <!-- Chat History -->
        <CollectionView Grid.Row="0" 
                        ItemsSource="{Binding Messages}" 
                        Margin="10" 
                        VerticalScrollBarVisibility="Always">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:ChatMessageModel">
                    <VerticalStackLayout HorizontalOptions="{Binding Alignment}" Margin="0, 5">
                        <Border BackgroundColor="{Binding BackgroundColor}" 
                                Padding="15" 
                                StrokeThickness="0" 
                                StrokeShape="RoundRectangle 15"
                                MaximumWidthRequest="300">
                            <VerticalStackLayout Spacing="5">
                                <Image Source="{Binding ImagePath}" 
                                       IsVisible="{Binding HasImage}" 
                                       HeightRequest="150" 
                                       Aspect="AspectFill" 
                                       Margin="0,0,0,5" />
                                <Label Text="{Binding Text}" TextColor="{Binding TextColor}" FontSize="14" />
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Input Area -->
        <Border Grid.Row="1" BackgroundColor="#1C2541" Padding="10" StrokeThickness="0">
            <VerticalStackLayout Spacing="5">
                
                <!-- Image Preview Area -->
                <Frame IsVisible="{Binding HasSelectedImage}" BackgroundColor="#0B132B" Padding="5" CornerRadius="10" HorizontalOptions="Start">
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label Text="ðŸ–¼ï¸ ÄÃ£ chá»n áº£nh" TextColor="#FFD700" VerticalOptions="Center"/>
                        <Button Text="X" Command="{Binding RemoveImageCommand}" BackgroundColor="Transparent" TextColor="#FF3b30" Padding="0" HeightRequest="30" WidthRequest="30" />
                    </HorizontalStackLayout>
                </Frame>

                <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="10" VerticalOptions="End">
                    <Button Grid.Column="0" 
                            Text="ðŸ“·" 
                            FontSize="20"
                            Padding="5"
                            BackgroundColor="Transparent" 
                            Command="{Binding PickImageCommand}" 
                            VerticalOptions="Center" />
                    
                    <Entry Grid.Column="1" 
                           Placeholder="Há»i má»“i, tháº»o, Ä‘iá»ƒm cÃ¢u..." 
                           Text="{Binding InputText}" 
                           TextColor="White" 
                           PlaceholderColor="#3A506B"
                           BackgroundColor="#0B132B"
                           VerticalOptions="Center" />
                    
                    <Button Grid.Column="2" 
                            Text="Gá»¬I" 
                            BackgroundColor="#5BC0BE" 
                            TextColor="#0B132B" 
                            FontAttributes="Bold"
                            Command="{Binding SendCommand}" 
                            VerticalOptions="Center" 
                            CornerRadius="10" />
                </Grid>
                
                <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="#FFD700" HeightRequest="20" />
            </VerticalStackLayout>
        </Border>

    </Grid>
</ContentPage>
