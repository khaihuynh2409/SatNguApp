<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SatNguApp.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SatNguApp.Mobile"
    Title="SatNguApp.Mobile">

    <TabBar>
        <Tab Title="Trang Chủ" Icon="home.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Bách Khoa" Icon="book.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:CatalogPage}"
                Route="CatalogPage" />
        </Tab>
    </TabBar>

</Shell>
