<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SatNguApp.Mobile.ViewModels"
             x:Class="SatNguApp.Mobile.CatalogPage"
             BackgroundColor="#0B132B"
             Title="BÁCH KHOA COMBO">

    <Grid RowDefinitions="Auto, *">
        <!-- Filter Header -->
        <Border Grid.Row="0" BackgroundColor="#1C2541" Padding="15" StrokeThickness="0">
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Picker x:Name="FishPicker" Title="Chọn loài cá" TitleColor="#5BC0BE" TextColor="White" WidthRequest="150" ItemDisplayBinding="{Binding .}">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Cá chép</x:String><x:String>Cá trắm đen</x:String><x:String>Cá trắm cỏ</x:String><x:String>Cá trôi</x:String>
                            <x:String>Cá mè trắng</x:String><x:String>Cá mè hoa</x:String><x:String>Cá mè vinh</x:String><x:String>Cá rô phi</x:String>
                            <x:String>Cá rô đồng</x:String><x:String>Cá diếc</x:String><x:String>Cá dãnh</x:String><x:String>Cá he</x:String>
                            <x:String>Cá ngựa</x:String><x:String>Cá chày</x:String><x:String>Cá đong đong</x:String><x:String>Cá mại</x:String>
                            <x:String>Cá tra</x:String><x:String>Cá basa</x:String><x:String>Cá vồ đém</x:String><x:String>Cá bông lau</x:String>
                            <x:String>Cá lăng</x:String><x:String>Cá trê</x:String><x:String>Cá ngạnh</x:String><x:String>Cá nheo</x:String>
                            <x:String>Cá bò</x:String><x:String>Cá chiên</x:String><x:String>Cá lóc</x:String><x:String>Cá chẽm</x:String>
                            <x:String>Cá măng</x:String><x:String>Cá ngão</x:String><x:String>Cá thiểu</x:String><x:String>Cá chạch</x:String>
                            <x:String>Cá lòng tong</x:String><x:String>Cá mương</x:String><x:String>Cá sặt</x:String><x:String>Cá sặt rằn</x:String>
                            <x:String>Cá lia thia</x:String><x:String>Cá thác lác</x:String><x:String>Cá cườm</x:String><x:String>Cá linh</x:String>
                            <x:String>Cá trèn</x:String><x:String>Cá rầm</x:String><x:String>Cá bống</x:String><x:String>Cá mú nước ngọt</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <Picker x:Name="SeasonPicker" Title="Mùa" TitleColor="#5BC0BE" TextColor="White" WidthRequest="120">
                    <Picker.Items>
                        <x:String>Xuân</x:String>
                        <x:String>Hạ</x:String>
                        <x:String>Thu</x:String>
                        <x:String>Đông</x:String>
                    </Picker.Items>
                </Picker>
            </HorizontalStackLayout>
        </Border>

        <!-- Combo List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="GỢI Ý COMBO TỐI ƯU" TextColor="#FFD700" FontAttributes="Bold" FontSize="18" Margin="0,0,0,10" />

                <!-- Placeholder for demonstration if no data -->
                <Label Text="Vui lòng chọn loài cá và mùa để xem combo..." 
                       TextColor="#3A506B" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       Margin="0,50,0,0" />
                
                <!-- Sample Card (Will be CollectionView in full impl) -->
                <Border StrokeShape="RoundRectangle 15" BackgroundColor="#1C2541" Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="COMBO SĂN HÀNG (MÙA HẠ)" TextColor="#6FFFE9" FontSize="12" FontAttributes="Bold" />
                        <Label Text="Cá Tra Sông / Hồ Dịch Vụ" TextColor="White" FontSize="16" FontAttributes="Bold" />
                        <BoxView HeightRequest="1" Color="#3A506B" />
                        
                        <Label Text="• Cần: Echo 2m7, độ cứng MH" TextColor="White" FontSize="14" />
                        <Label Text="• Trục: Dây PE 4.0 - 5.0" TextColor="White" FontSize="14" />
                        <Label Text="• Thẻo: Dù siêu bền 0.4" TextColor="White" FontSize="14" />
                        <Label Text="• Lưỡi: Size 12, không ngạnh" TextColor="White" FontSize="14" />
                        <Label Text="• Mồi: Cám tanh + nước cốt dừa" TextColor="#FFD700" FontSize="14" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
